<!DOCTYPE html>
<html lang="en">
{{> baseHead customTitle=customTitleId }}
<body>
    {{> siteHeader}}
    {{#if onePost}}
    {{!-- Topic Post --}}
        <div style="background-color: #FFF4E0;">
            <h2>{{onePost.titlePost}}</h2>
            <p>
                <span>{{onePost.userCreate}} |</span>
                <span>{{onePost.dataTimeText }}</span>
            </p>
            <p>{{onePost.contentText}}</p>
        </div>
        {{!-- form // values ส่งมาจาก router "/:post_id/comments" --}}
        <hr>
             <form action="/p/{{ onePost.id }}/comments" method="post">
            <p>
                <textarea name="contentText" placeholder="Comment this post">{{ commentValues.contentText }}</textarea>
            </p>
            <p>
                <input type="text" name="userCreate" placeholder="Comment by username" value="{{ commentValues.userCreate }}">
            </p>
            <p>
                <input id="input-accepted" type="checkbox" name="accepted">
                <label for="input-accepted">ยืนยันการโพสข้อความ</label>
            </p>
            <p>
                <button type="submit">Create</button>
            </p>
            {{#if errorMsg }}
                <p style="color: red;"><Strong>{{ errorMsg }}*</Strong></p>
            {{/if}}
        </form>
        <hr>
        {{!-- Show Comment // postComments ส่งค่ามาจาก router /:post_id--}}
        {{#if postComments }}
            <h4> {{ postComments.length }} comments</h4>
        {{else}}
            <h4>No comments</h4>
        {{/if}}

        {{#each postComments}}
        <div style="background-color: #f5f5f5 ;">
            <p>
                <span>{{ this.userCreate }} |</span>
                <span>{{ this.dataTimeText }}</span>
            </p>
            <p> {{ this.content }} </p>
        </div>
        {{/each}}

    {{else}}
        <p>Not found post</p>
    {{/if}}

   
    {{> siteFooter}}
</body>
</html>